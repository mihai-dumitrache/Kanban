@using Kanban.Models
@model Kanban.Models.User

@{
    ViewData["Title"] = "Register User";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to create a user.</p>

<form asp-controller="User" asp-action="AddUser" method="post">
    <div class="container">

        <h1>Add new task</h1>
        <p>Please fill in this form to create a new task</p>
        <hr>

        <div class="form-group">
        <label asp-for="Name" class="control-label"><b>User Name</b></label>
        <input asp-for="Name" class="form-control" type="text" id="txtName" /> <br />
        </div>

        <div class="form-group">
        <label asp-for="Password" class="control-label"><b>Password</b></label>
        <input asp-for="Password" class="form-control" type="password" placeholder="Create Password" id="txtPassword" />
        <hr><br />
        </div>

        <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label"><b>Phone Number</b></label>
        <input asp-for="PhoneNumber" class="form-control" type="text" id="txtPhoneNumber" />
        <hr><br />
        </div>

        <div class="form-group">
        <label asp-for="EmailAdress" class="control-label"><b>Email Address</b></label>
        <input asp-for="EmailAdress" class="form-control" type="text" id="txtEmailAdress" />
        <hr><br />
        </div>

        <div class="form-group">
        <label asp-for="Position" class="control-label"><b>Position</b></label>
        <input asp-for="Position" class="form-control" type="text" id="txtPosition" />
        <hr><br />
        </div>
       

        <button type="submit" class="btn btn-default">Add user</button>

    </div>

</form>
